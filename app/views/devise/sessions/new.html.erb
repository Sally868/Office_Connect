<section class="text-gray-400 h-screen py-4 p bg-white body-font">
  <div class="xl:w-2/6 lg:w-1/3 md:w-1/3 mx-auto bg-gray-900 bg-opacity-50 shadow rounded-md p-8 flex flex-col md:w-2/5 sm:w-1/2 mt-10 md:mt-0">
    <h2 class="text-white text-xl font-medium title-font mb-2">Log in</h2>
    <div class="relative mb-4">
    <label for="full-name" class="leading-4 text-md text-gray-200 w-full">
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <%= f.input :email,
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "email" } %>
          <%= f.input :password,
                      required: false,
                      input_html: { autocomplete: "current-password" } %>
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>

        <div class="form-actions bg-blue-400 text-center text-white">
          <%= f.button :submit, value: "Log-in" %>
        </div>
      <% end %>

      <div class="form-actions py-2 mt-2 bg-blue-900 text-center text-white">
        <%= render "devise/shared/links" %>
      </div>

    </div>
  </div>
</section>
