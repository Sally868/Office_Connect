                <span class="sm:hidden md:inline">(28)</span>
              </div>
              <div class="text-base font-normal mx-2">Â·</div>
              <p class="text-sm font-medium text-gray-700 sm:mb-1">Richmond, Victoria, Australia</p>
            </div>
            <div class="flex justify-end">
              <a class="py-1 px-2 no-underline border text-blue-900 rounded-md" href="/venues/3/spaces/new">+ New Space</a>
            </div>
          </div>


      <div class="w-full h-96 grid grid-cols-3 grid-rows-2 gap-2">
        <div class="relative col-span-3 row-span-2 md:col-span-2">
          <div class="absolute inset-0 w-full h-full object-cover bg-gray-100 sm:rounded-md">
          </div>
          <% if @venue.photos.first.present? %>
            <img src="<%= cl_image_path @venue.photos.first.key %>" alt="" class="absolute inset-0 w-full h-full object-cover bg-gray-100 sm:rounded-md">
          <% end %>
        </div>

        <div class="relative hidden md:block">
        <% if @venue.photos.first.present? %>
          <img src="<%= cl_image_path @venue.photos.second.key %>" alt="" class="absolute inset-0 w-full h-full object-cover rounded-md bg-gray-100">
        <% end %>
        </div>
        <div class="relative hidden md:block">
        <% if @venue.photos.first.present? %>
          <img src="<%= cl_image_path @venue.photos.third.key %>" alt="" class="absolute inset-0 w-full h-full object-cover rounded-md bg-gray-100">
        <% end %>
        </div>
      </div>

  </div>
</section>

