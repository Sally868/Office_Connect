<%= simple_form_for @venue do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

    <%= f.input :name %>
    <%= f.input :address %>

    <%= f.input :photos, class:"btn btn-primary bg-blue", as: :file, input_html: { multiple: true } %>

    <%= f.button :submit, class:"d-flex justify-content-center text-white py-1 px-6 focus:outline-none hover:bg-blue-600 rounded-md text-lg bg-gradient-to-t from-blue-900 via-blue-600 to-blue-500" %>

<% end %>
