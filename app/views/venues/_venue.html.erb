
 <div class="w-full flex mb-3 p-1 rounded-md hover:bg-gray-200 shadow">
  <div class="overflow-hidden rounded-md flex-shrink-0 h-36 w-36 border-2 border-white inner-shadow">
    <%= cl_image_tag(venue.photos.first.key, width: 300, height: 300, crop: :fill) if venue.photos.attached? %>
  </div>
  <div class="p-2 pl-4 flex flex-col justify-between flex-grow-1">
<%# Put address at the bottom of the name DIV %>
    <div class="flex-col justify-between">
      <div class="flex-row">
        <%= link_to venue_path(venue), class:'group hover:text-gray-500' do %>
          <h2 class="text-xl font-bold font-sans group-hover:text-gray-800"><%= venue.name %></h2>
        <% end %>
      </div>
      <div class="flex-row">
        <%= link_to venue_path(venue), class:'group hover:text-gray-400' do %>
          <h4 class="text-sm font-light text-gray-600"><%= venue.address %></h4>
        <% end %>
      </div>
    </div>

    <%# BUTTONS %>
    <div class="flex justify-end items-center">

      <%= link_to venue_path(venue), class:'ml-1 px-3 py-1.5 flex items-center hover:no-underline md:border-2 md:border-gray-800 rounded-md no-underline text-gray-800 hover:text-white hover:bg-gray-800' do %>
        <i class="fas fa-plus-square fa-lg"></i>
        <p class="hidden md:block ml-2">Add</p>
      <% end %>

      <% if current_user.venues.include?(venue) %>
        <%= link_to edit_venue_path(venue), class:'ml-1 px-3 py-1.5 flex items-center hover:no-underline md:border-2 md:border-gray-800 rounded-md no-underline text-gray-800 hover:text-white hover:bg-gray-800' do %>
          <i class="fas fa-user-edit fa-lg"></i>
          <p class="hidden md:block ml-2">Edit</p>
        <% end %>

        <%= link_to venue_path(venue), method: :delete, data: { confirm: "Are you sure you want to delete Venue?"}, class:'ml-1 px-3 py-1.5 flex items-center hover:no-underline md:border-2 md:border-gray-800 rounded-md no-underline text-gray-800 hover:text-white hover:bg-gray-800' do %>
          <i class="fas fa-trash-alt fa-lg pt-1" style=""></i>
          <p class="hidden md:block ml-2">Delete</p>
        <% end %>
      <% end %>
<%# class:'text-white py-1 px-6 focus:outline-none hover:bg-blue-600 rounded-md text-lg bg-gradient-to-t from-blue-900 via-blue-600 to-blue-500' %>
    </div>
  </div>
 </div>
