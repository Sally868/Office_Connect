
 <div class="w-full flex mb-4 p-2 rounded-2xl hover:bg-gray-200">
  <div class="overflow-hidden rounded-xl flex-shrink-0 h-36 w-36 border-2 border-white shadow">
    <%= cl_image_tag(venue.photos.first.key, width: 300, height: 300, crop: :fill) if venue.photos.attached? %>
  </div>
  <div class="p-2 pl-4 flex flex-col justify-between flex-grow-1">
    <div class="flex justify-between">
      <div>

        <h2 class="text-xl mt-1"><%= venue.name %></h2>
      </div>
      <div>
        <h4 class="text-lg font-semibold"><%= venue.address %></h4>
      </div>
    </div>
     <div class="flex justify-end">
      <%= link_to venue_path(venue), class:'p-2 text-color-rgb(44 82 130)' do %>
        <i class="fas fa-plus-square"></i>
      <% end %>
      <%= link_to edit_venue_path(venue), class:'p-2' do %>
        <i class="fas fa-user-edit"></i>
      <% end %>
      <%= link_to  venue_path(venue), method: :delete, data: { confirm: "Are you sure you want to delete Venue?"}, class:'p-2' do %>
        <i class="fas fa-trash-alt " style=""></i>
      <% end %>


<%# class:'text-white py-1 px-6 focus:outline-none hover:bg-blue-600 rounded-md text-lg bg-gradient-to-t from-blue-900 via-blue-600 to-blue-500' %>

    </div>
  </div>
 </div>
