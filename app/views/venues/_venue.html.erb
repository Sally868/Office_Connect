<% if false %>
<div class="w-full flex mb-1 p-2 rounded-sm bg-white shadow">
  <div class="p-2 pl-4 flex flex-col justify-between flex-grow-1">
    <div class="flex justify-between">
      <div>
        <h2 class="text-xl mt-1 text-gray-800"><%= venue.name %></h2>
        <h3 class="text-xs px-2 py-1 text-gray-800 inline"><%= venue.address %></h3>
      </div>
    </div>
    <div class="flex justify-end">
      <%= link_to 'Book the space', venue_path(venue), class:'py-2 px-4 no-underline bg-yellow-200 text-yellow-900 rounded-md' %>

