      <%= button_to 'Delete Venue', venue_path(venue), method: :delete, data: { confirm: "Are you sure you want to delete Venue?"}, class:'py-2 px-4 no-underline bg-yellow-200 text-yellow-900 rounded-md' %>

    </div>

  </div>
</div>
<% end %>


