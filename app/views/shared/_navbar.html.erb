<!-- requires Tailwind CSS v2.0+ -->
<div class="relative bg-gray-800">
  <div class="max-w-7xl mx-auto px-4 sm:px-6">
    <div class="flex justify-between items-center py-6 md:justify-start md:space-x-10">
      <div class="flex justify-start lg:w-0 lg:flex-1">
        <a href="#">
          <img class="h-8 w-auto sm:h-10" src="https://tailwindui.com/img/logos/workflow-mark-blue-600.svg" alt="">
        </a>
        <div class="navbar-brand ml-3 text-xl text-white"><%= link_to "Office Connect", root_path%>
        </div>
      </div>
      <div class="-mr-2 -my-2 md:hidden">
        <div class="relative"
      data-controller="dropdown">
          <button data-action="click->dropdown#toggle" data-dropdown-target="button" type="button" class="rounded-md p-2 inline-flex items-center justify-center text-gray-100 hover:text-gray-400 focus:outline-none focus:ring-2 focus:ring-inset focus:ring-blue-600" aria-expanded="false">
            <!-- Heamburger menu -->
            <svg class="h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
            </svg>
          </button>
          <div data-dropdown-target="menu" class="absolute pin-r mt-2 transform shadow transition hover:border-gray-600 hidden right-0">
            <div class="block w-80 justify-center bg-gray-800 py-1 px-8 leading-8 divide-y divide-gray-600 rounded-md border-gray-600 overflow-hidden">
              <%= link_to "About", about_path, class:"px-1 py-2 justify-center text-white text-decoration-none group flex items-center text-base font-medium hover:text-gray-600 hover:bg-gray-600" %>
              <%= link_to "Venues", venues_path, class:"px-1 py-2 justify-center text-white text-decoration-none group flex items-center text-base font-medium hover:text-gray-600 hover:bg-gray-600" %>
              <%= link_to "Booking", bookings_path, class:"px-1 py-2 justify-center text-white text-decoration-none group flex items-center text-base font-medium hover:text-gray-600 hover:bg-gray-600" %>
            </div>
          </div>
        </div>
      </div>
      <nav class="hidden md:flex space-x-10">
        <%= link_to "About", about_path, class:"text-gray-100 text-decoration-none group rounded-md inline-flex items-center text-base font-medium hover:text-gray-400 " %>
        <%= link_to "Venues", venues_path, class:"text-gray-100 text-decoration-none group rounded-md inline-flex items-center text-base font-medium hover:text-gray-400 " %>
        <%= link_to "Booking", bookings_path, class:"text-gray-100 text-decoration-none group rounded-md inline-flex items-center text-base font-medium hover:text-gray-400" %>
      </nav>
      <div class="hidden md:flex items-center justify-end md:flex-1 lg:w-0">
        <% if current_user %>
           <%= button_to destroy_user_session_path, method: :delete, class:'whitespace-nowrap text-base font-medium text-gray-100 hover:text-gray-400' do %>
            Logout
          <% end %>
        <% else %>
          <%= link_to new_user_session_path, class:'whitespace-nowrap text-base font-medium text-gray-100 hover:text-gray-400' do %>
            Log in
          <% end %>
          <%= link_to new_user_registration_path, class:'ml-8 whitespace-nowrap inline-flex items-center justify-center px-4 py-2 shadow rounded-md shadow-sm text-base font-medium text-white bg-blue-600 hover:bg-blue-700' do %>
            Sign up
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>
